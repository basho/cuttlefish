{brt_protect, true}.

{erl_opts, [
    warn_export_all,
    warn_export_vars,
    warn_obsolete_guard,
    warn_untyped_record,
    warn_unused_import
]}.

{escript_emu_args,
    "%%! -escript main cuttlefish_escript -smp disable +A 0\n"}.

{escript_incl_apps, [
    getopt,
    goldrush,
    lager
]}.

{provider_hooks, [
    {pre,   [{compile,  neotoma}]}
]}.

{deps, [
    {getopt,
        {git, "https://github.com/basho/getopt.git",
        {branch, "rebar3"} }},
    {lager,
        {git, "https://github.com/basho/lager.git",
        {branch, "rebar3"} }}
]}.

{profiles, [
    {check, [
        {dialyzer, [
            {warnings, [
                error_handling,
                race_conditions,
                unknown
                % it might be good to clean these up at some point
                % unmatched_returns
            ]}
        ]},
        {erl_opts, [
            debug_info,
            {d, 'BASHO_CHECK'}
        ]},
        {overrides, [
            {add, getopt,   [{erl_opts, [debug_info]}]},
            {add, lager,    [{erl_opts, [debug_info]}]}
        ]},
        {xref_checks, [
            deprecated_function_calls,
            deprecated_functions,
            locals_not_used,
            undefined_function_calls,
            undefined_functions
        ]}
    ]},
    {docs, [
        {edoc_opts, [
            {app_default, "http://www.erlang.org/doc/man"},
            {preprocess, true},
            {macros, [
                {'EDOC', true},
                {'BASHO_DOCS', true}
            ]}
        ]}
    ]},
    {prod, [
        {erl_opts, [
            {d, 'BASHO_PROD'}
        ]}
    ]},
    {test, [
        {cover_enabled, true},
        {erl_opts, [
            debug_info,
            nowarn_deprecated_function,
            nowarn_export_all,
            nowarn_unused_function,
            nowarn_unused_import,
            {d, 'BASHO_TEST'}
        ]}
    ]},
    {validate, [
        {erl_opts, [
            strong_validation,
            warn_missing_spec,
            warn_untyped_record,
            {d, 'BASHO_VALIDATE'}
        ]}
    ]}
]}.

{plugins, [
    {basho_rebar_tools,
        {git, "https://github.com/basho/basho_rebar_tools.git",
        {branch, "master"} }},

    % Don't use the hex package!
    % - It's not up-to-date.
    % - Our version isn't namespaced.
    % - Hex requires OTP-17+.
    {rebar3_neotoma_plugin,
        {git, "https://github.com/basho/rebar3_neotoma_plugin.git",
        {branch, "master"} }}
]}.
